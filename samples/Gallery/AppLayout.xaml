<?xml version="1.0" encoding="utf-8" ?>
<m:AppPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Manuela;assembly=Manuela"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:layout="clr-namespace:Gallery.Layout"
    xmlns:appViews="clr-namespace:Gallery.Views"
    x:Class="Gallery.AppLayout">

    <AbsoluteLayout>
        <layout:AppTopBar
            x:Name="AppTopBar"
            m:Has.Transitions="{m:Transitions TranslateY}"/>

        <layout:AppMenu/>

        <!--
            The app body content changes depending on the app route
        -->

        <ScrollView
            Background="{m:Brush 'Gray,Swatch100'}"
            AbsoluteLayout.LayoutFlags="SizeProportional"
            AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
            m:Has.States="{StaticResource AppBodyStates}"
            Scrolled="OnAppScrolled">

            <m:AppBody
                Background="{m:Brush 'Gray,Swatch50'}"
                Padding="15, 0, 15, 0">

                <!-- we can specify the view where the app starts, in this case, the MainView -->
                <appViews:Brushes/>

            </m:AppBody>

        </ScrollView>
    </AbsoluteLayout>
</m:AppPage>
