<?xml version="1.0" encoding="utf-8" ?>
<m:AppPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Manuela;assembly=Manuela"
    xmlns:layout="clr-namespace:Gallery.Layout"
    xmlns:appViews="clr-namespace:Gallery.Views"
    x:Class="Gallery.AppLayout">

    <AbsoluteLayout>

        <layout:AppMenu/>

        <!--
            The app body content changes depending on the app route
        -->

        <m:AppBody
            Background="{m:Brush 'Gray,Swatch100'}"
            AbsoluteLayout.LayoutFlags="SizeProportional"
            AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
            m:Has.States="{StaticResource AppBodyStates}">

            <!-- we can specify the view where the app starts, in this case, the MainView -->
            <appViews:Brushes/>

        </m:AppBody>

    </AbsoluteLayout>

</m:AppPage>
