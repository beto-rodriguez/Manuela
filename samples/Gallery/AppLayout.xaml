<?xml version="1.0" encoding="utf-8" ?>
<m:AppPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Manuela;assembly=Manuela"
    xmlns:layout="clr-namespace:Gallery.Layout"
    xmlns:appViews="clr-namespace:Gallery.Views"
    x:Class="Gallery.AppLayout">

    <AbsoluteLayout>

        <layout:AppMenu/>

        <Border
            m:Has.States="{m:States
                Default={m:Set
                    Background='Gray,Swatch100',
                    BorderThickness=0,
                    AbsoluteLayoutFlags=SizeProportional,
                    AbsoluteLayoutBounds='0, 0, 1, 1'},
                OnXs={m:Set Padding='10, 10, 10, 70'},
                OnMd={m:Set Padding='80, 37, 20, 20'},
                OnXl={m:Set Padding='300, 37, 20, 20'}}">

            <!-- The app body is the element that changes depending on the app route -->
            <m:AppBody>

                <!-- we can specify the view where the app starts, in this case, the MainView -->
                <appViews:Brushes/>

            </m:AppBody>

        </Border>

    </AbsoluteLayout>

</m:AppPage>
