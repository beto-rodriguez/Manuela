<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:Manuela;assembly=Manuela"
             xmlns:forms="clr-namespace:Manuela.Forms;assembly=Manuela"
             xmlns:local="clr-namespace:Gallery.Views;assembly=Gallery"
             x:DataType="local:CustomerForm"
             x:Class="Gallery.Views.Validation">

    <VerticalStackLayout>

        <forms:TextInput InputOf="{Binding NameInput}"/>

        <!--
        <forms:TextInput
            ValidationMessage="{Binding Errors[Email]}"
            ValueChangedCommand="{Binding OnChanged[Email]}"
            Placeholder="Email" />
        -->

        <Button
            Command="{Binding SaveCommand}"
            Text="submit"/>

    </VerticalStackLayout>
</ContentView>
