<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:Manuela;assembly=Manuela"
             xmlns:local="clr-namespace:MauiApp1"
             x:Class="MauiApp1.App"
             x:DataType="local:App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.MainPage>
        <m:AppPage>

            <m:AppPage.Resources>
                <m:Set x:Key="this" Background="Primary"/>
            </m:AppPage.Resources>

            <StackLayout Padding="50" BackgroundColor="White">
                <Label Text="{Binding Condition.Name}"/>

                <Entry
                    m:Router.Link="MainView"
                    m:On.Lg="{m:Set Background=Primary}">
                    <m:If.IsTrue>
                        <m:ConditionalSet
                            Condition="{Binding Condition}"
                            Set="{m:Set Background=Secondary}"/>
                    </m:If.IsTrue>
                </Entry>

                <Entry />

                <m:AppBody>
                    <local:MainView/>
                </m:AppBody>

            </StackLayout>
        </m:AppPage>
    </Application.MainPage>
</Application>
