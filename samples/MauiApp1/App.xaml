<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:Manuela;assembly=Manuela"
             xmlns:local="clr-namespace:MauiApp1"
             x:Class="MauiApp1.App"
             x:DataType="local:App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.MainPage>
        <m:AppPage>


            <StackLayout Padding="50" BackgroundColor="White">
                <Button Text="main" m:Router.Link="MainView"/>

                <Entry>
                    <m:On.ConditionalStates>
                        <m:StatesCollection>
                            <m:FocusedState Style="{m:Style Background=Tertiary}"/>
                            <m:StyleIf Condition="{Binding HasText}" Style="{m:Style TextColor=Primary}"/>
                        </m:StatesCollection>
                    </m:On.ConditionalStates>
                </Entry>

                <Entry/>

                <Entry/>

                <m:AppBody>
                    <local:MainView/>
                </m:AppBody>

            </StackLayout>
        </m:AppPage>
    </Application.MainPage>
</Application>
