<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:Manuela;assembly=Manuela"
             xmlns:local="clr-namespace:MauiApp1"
             x:Class="MauiApp1.App"
             x:DataType="local:App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.MainPage>
        <m:AppPage>

            <m:AppPage.Resources>
                <m:StatesCollection x:Key="states">
                    <m:SetIf Condition="{Binding IsVisualFocused}" Setters="{m:Set Background=Tertiary}" />
                    <m:SetIf Condition="{Binding IsVisualDisabled}" Setters="{m:Set Background=Gray}" />
                </m:StatesCollection>

                <m:Set x:Key="set" Background="Primary"/>
                <m:Set x:Key="set2" Background="Secondary"/>

            </m:AppPage.Resources>

            <StackLayout Padding="50" BackgroundColor="White">
                <Button Text="main" m:Router.Link="MainView"/>

                <Entry
                    m:On.Lg="{x:StaticResource set}"
                    m:On.Xxl="{x:StaticResource set2}"
                    m:On.ConditionalStates="{x:StaticResource states}"/>

                <Entry
                    IsEnabled="False"
                    m:On.Lg="{x:StaticResource set}"
                    m:On.Xxl="{x:StaticResource set2}"
                    m:On.ConditionalStates="{x:StaticResource states}"/>

                <Entry
                    m:On.Lg="{x:StaticResource set}"
                    m:On.Xxl="{x:StaticResource set2}"/>

                <m:AppBody>
                    <local:MainView/>
                </m:AppBody>

            </StackLayout>
        </m:AppPage>
    </Application.MainPage>
</Application>
