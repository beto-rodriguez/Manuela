@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row @platformClass">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private string platformClass = string.Empty;

    protected override void OnInitialized()
    {
        platformClass = DeviceInfo.Platform.ToString().ToLowerInvariant();
    }
}
