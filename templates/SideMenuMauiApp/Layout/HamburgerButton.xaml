<?xml version="1.0" encoding="utf-8" ?>
<Border
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Manuela;assembly=Manuela"
    x:Class="SideMenuMauiApp.Layout.HamburgerButton"
    Style="{StaticResource HamburgetButtonStyle}">
    
    <Border.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnTapped" />
    </Border.GestureRecognizers>

    <Image
        Source="{AppThemeBinding Light='hamburger_dark.png', Dark='hamburger_light.png'}"
        HeightRequest="15"/>

</Border>
